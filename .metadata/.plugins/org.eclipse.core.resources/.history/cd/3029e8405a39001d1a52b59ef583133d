package 예외연습;

//1. 숫자 2개를 유저로부터 입력받기.
//2. num을 divisor로 나누기
//3. divisor를 유저가 0으로 입력했을 경우
		//0으로 나눌 수 없으니 다시 입력하라고 콘솔에 띄우기
//4. 다시 입력받기.
//5. 제대로된 결과 출력하기
		
import java.util.Scanner;

public class divideByZero {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("나눠질 수를 입력하세요 : ");
		int original = sc.nextInt();
		System.out.print("나눌 수를 입력하세요 : ");
		int dividor = sc.nextInt();
		try {
			double result = original/dividor;
			System.out.println(result);
		}catch (Exception e) {
			// TODO: handle exception
			System.out.println("얍얍얍 안돼 !!! 0말고 다른걸로 나눠버렷!!! 가버렷 이꾸요잇 ");
		}Scanner sc = new Scanner(System.in);
		System.out.print("나눠질 수를 입력하세요 : ");
		int original = sc.nextInt();
		System.out.print("나눌 수를 입력하세요 : ");
		int dividor = sc.nextInt();
		
	}

}
